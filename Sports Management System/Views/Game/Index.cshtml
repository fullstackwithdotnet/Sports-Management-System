@model IEnumerable<Sports_Management_System.Models.Game>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Games</h2>

<p>
    @Html.ActionLink("+ New Game", "Create",null, new { @class="btn btn-default"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Game_Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Game_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Game_DurationInHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Game_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Game_RulesBooklet)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Game_Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Game_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Game_DurationInHours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Game_Description)
        </td>
        <td>
            <a href="@Url.Action("Download","Game", new { path = item.Game_RulesBooklet})" target="_blank">Open File</a>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Game_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Game_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Game_ID })
        </td>
    </tr>
}

</table>
