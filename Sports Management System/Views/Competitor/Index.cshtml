@model IEnumerable<Sports_Management_System.Models.Competitor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Of Competitors</h2>

<p>
    @Html.ActionLink("+ New Competitor", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Competitor_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Competitor_DoB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Competitor_Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Competitor_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Competitor_Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Competitor_Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Competitor_ContactNo)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{
                    string fileName = Path.GetFileName(item.Competitor_Photo);
                    string imagePath = Url.Content("~/CompetitorPhotos/" + fileName);

                };
                <img src="@imagePath" alt="ASP.NET" style="width:80px;height:80px" class="img-fluid img-thumbnail" />

            </td>
            <td>
                @item.Competitor_Salutation.@item.Competitor_Name
            </td>
            <td>
                @item.Competitor_DoB.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Competitor_Email)
            </td>
            <td style="max-width:200px; text-overflow:ellipsis;overflow:hidden;white-space:nowrap">
                @Html.DisplayFor(modelItem => item.Competitor_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Competitor_Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Competitor_Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Competitor_ContactNo)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Competitor_ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.Competitor_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Competitor_ID })
            </td>
        </tr>
    }

</table>
